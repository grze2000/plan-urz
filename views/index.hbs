<html>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/css/styles.css' />
    <title>App</title>
  </head>
  <body>
    <a class='btn' href="/pdf?{{#if filters.exerciseGroup}}exerciseGroup={{filters.exerciseGroup}}{{/if}}{{#if filters.workshopGroup}}&workshopGroup={{filters.workshopGroup}}{{/if}}">Podgląd PDF</a>
    <div class='timetable'>
      {{#with weekA}}
        <h2>Tydzień A</h2>
        <div class='week'>
          {{#each this as |day dayName|}}
            <div class='day'>
              <h3 class='dayName'>{{dayName}}</h3>
              <div class='lessons'>
                {{#each day as |class|}}
                  <div class='lesson'>
                    <div class='row'>
                      <div class='hours'>{{class.start}}
                        -
                        {{class.end}}</div>
                      <div>
                        <div class='subject'>{{class.subject}}</div>
                        <div class='teacher'>{{class.teacher}}</div>
                      </div>
                    </div>
                    <div class='content'>
                      <div>Sala <b>{{class.room}}</b>,</div>
                      <div>grupa
                        <b>{{class.groupType}}
                          {{class.groupNumber}}</b></div>
                      <div class='right'>{{class.type}}</div>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
      <div class='spacer'></div>
      {{#with weekB}}
        <h2>Tydzień B</h2>
        <div class='week'>
          {{#each this as |day dayName|}}
            <div class='day'>
              <h3 class='dayName'>{{dayName}}</h3>
              <div class='lessons'>
                {{#each day as |class|}}
                  <div class='lesson'>
                    <div class='row'>
                      <div class='hours'>{{class.start}}
                        -
                        {{class.end}}</div>
                      <div>
                        <div class='subject'>{{class.subject}}</div>
                        <div class='teacher'>{{class.teacher}}</div>
                      </div>
                    </div>
                    <div class='content'>
                      <div>Sala <b>{{class.room}}</b>,</div>
                      <div>grupa
                        <b>{{class.groupType}}
                          {{class.groupNumber}}</b></div>
                      <div class='right'>{{class.type}}</div>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </div>

  </body>
</html>